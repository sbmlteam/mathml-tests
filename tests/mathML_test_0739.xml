<math xmlns="http://www.w3.org/1998/Math/MathML">
  <semantics>
    <apply>
      <lt/>
      <ci> a </ci>
      <piecewise>
        <piece>
          <apply>
            <minus/>
            <ci> b </ci>
            <apply>
              <times/>
              <ci> c </ci>
              <apply>
                <ceiling/>
                <apply>
                  <divide/>
                  <ci> b </ci>
                  <ci> c </ci>
                </apply>
              </apply>
            </apply>
          </apply>
          <apply>
            <xor/>
            <apply>
              <lt/>
              <ci> b </ci>
              <cn type="integer"> 0 </cn>
            </apply>
            <apply>
              <lt/>
              <ci> c </ci>
              <cn type="integer"> 0 </cn>
            </apply>
          </apply>
        </piece>
        <otherwise>
          <apply>
            <minus/>
            <ci> b </ci>
            <apply>
              <times/>
              <ci> c </ci>
              <apply>
                <floor/>
                <apply>
                  <divide/>
                  <ci> b </ci>
                  <ci> c </ci>
                </apply>
              </apply>
            </apply>
          </apply>
        </otherwise>
      </piecewise>
    </apply>
    <annotation encoding="infix-input">a &lt; (b % c)</annotation>
